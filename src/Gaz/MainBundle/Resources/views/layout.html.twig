<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('jquery_components/bootstrap/dist/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('jquery_components/bootstrap/dist/css/bootstrap-theme.min.css') }}">

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="body" background="/bundles/gazmain/images/bg.jpg">
    {% block heater %}
        {% if app.session.get('code') == 6 and app.session.get('type') == 'director' %}
            {% block menu %}
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#">Seam Gaz</a>
                        </div>

                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                {{ knp_menu_render('GazMainBundle:Builder:topMenu', { 'template': 'GazMainBundle:Menu:knp_menu.html.twig', 'currentAsLink': false, 'id':'navigation'}) }}
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}
        {% endif %}
    {% endblock %}
    
    <div class="container">
                {% block contentMain %}{% endblock %}
    </div>
    <footer>
        {#{{ dump('footre area') }}#}
    </footer>


</body>
{% block javascripts %}
    <script src="{{ asset('jquery_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('jquery_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</html>
